{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["es2020"],
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "inlineSourceMap": false,
    "declaration": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "strict": true,
    "outDir": "./dist",
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
